
@{
    ViewData["Title"] = "Lista Buckets";
}

<head>
    <link href="https://vjs.zencdn.net/7.0.3/video-js.css" rel="stylesheet">
    <script src="http://vjs.zencdn.net/ie8/ie8-version/videojs-ie8.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

</head>

<h1>Lista de Videos</h1>

<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered table-striped" style="clear: both">
            <tr>
                <th>Video</th>
                <th>-</th>
            </tr>
            @foreach (string video in ViewBag.Videos)
            {
                <tr>
                    <td>@video</td>
                    <td>
                        <input type="button" name="name" value="Play" onclick="PlayInPlayer('@video ');" />
                    </td>

                </tr>
            }
        </table>
    </div>

    <div class="col-md-6">
        <video id="my-video" class="video-js" controls preload="auto" width="640" height="264" data-setup="{}">
            <source src="@ViewBag.UrlActual" type="video/mp4">
            <p class="vjs-no-js">
                To view this video please enable JavaScript, and consider upgrading to a web browser that
                <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
            </p>
        </video>
        <script src="https://vjs.zencdn.net/7.0.3/video.js"></script>
    </div>
</div>

@section Scripts
    {
    <script type="text/javascript">

        function PlayInPlayer(url) { 
            debugger;
            var video = videojs("my-video");
            video.src('@ViewBag.UrlBase' + url);
        }
    </script>
}